<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/ic_boy"
            android:id="@+id/dashboard_chat_profile_picture"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_chat_username"
            app:layout_constraintStart_toEndOf="@+id/dashboard_chat_profile_picture"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/dashboard_chat_latest_message"
            app:layout_constraintVertical_chainStyle="packed" android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="Latest Message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_chat_latest_message" app:layout_constraintStart_toEndOf="@+id/dashboard_chat_profile_picture"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/dashboard_chat_username"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>