<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@android:color/holo_orange_light">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view_task_message"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/bg_form">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_boy"
                    android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:text="Benjamin Welly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_username"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                    android:textAlignment="center" android:textSize="18sp" android:textStyle="bold"/>
            <TextView
                    android:text="@string/task_view_offer_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_offer_caption" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textStyle="bold" android:textSize="18sp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_status"/>
            <TextView
                    android:text="$3.00"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_offer" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_offer_caption"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textSize="16sp"/>
            <TextView
                    android:text="@string/task_view_title_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_title_caption" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_offer"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="Help me"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_title" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_title_caption" android:layout_marginTop="8dp"
                    android:textSize="16sp"/>
            <TextView
                    android:text="@string/task_view_description_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textStyle="bold"
                    android:id="@+id/task_view_description_caption" android:textSize="18sp"/>
            <TextView
                    android:text="Life is tireding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_description" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_description_caption"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textSize="16sp"/>
            <TextView
                    android:text="@string/task_view_location_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_location_caption" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="Ridge View Residential College"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_location" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_location_caption"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textSize="16sp"/>
            <TextView
                    android:text="@string/task_view_date_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_date_caption" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_location"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="20190218"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_date" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_date_caption"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:textSize="16sp"/>
            <Button
                    android:text="@string/message_user_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_user_button" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_date"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/accept_task_button"
                    android:background="@drawable/rounded_button"
                    android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
            <Button
                    android:text="@string/accept_task_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/accept_task_button" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_date"
                    app:layout_constraintStart_toEndOf="@+id/message_user_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/rounded_button"
                    android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="STATUS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_view_status"
                    app:layout_constraintEnd_toEndOf="@+id/task_status_caption"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_status_caption"
                    app:layout_constraintStart_toStartOf="@+id/task_status_caption" android:textSize="16sp"/>
            <TextView
                    android:text="Task Status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/task_status_caption" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/task_view_username"
                    app:layout_constraintStart_toStartOf="@+id/task_view_username"
                    app:layout_constraintEnd_toEndOf="@+id/task_view_username" android:textSize="18sp"
                    android:textStyle="bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <TextView
            android:text="View Task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/view_task_message" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:textStyle="bold" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>