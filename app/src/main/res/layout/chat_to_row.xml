<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginBottom="12dp">
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageview_to_row" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="This is my message which is super long and I hope this can work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:maxWidth="240dp"
            android:id="@+id/textview_to_row" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageview_to_row" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:background="@drawable/rounded_edittext"/>
</androidx.constraintlayout.widget.ConstraintLayout>
